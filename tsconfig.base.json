{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "ES2022",
    "module": "esnext",
    "lib": ["es2022", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dalenguyen/api-nest/domains": ["libs/api-nest/domains/src/index.ts"],
      "@dalenguyen/api-nest/infrastructure": ["libs/api-nest/infrastructure/src/index.ts"],
      "@dalenguyen/api-nest/shell": ["libs/api-nest/shell/src/index.ts"],
      "@dalenguyen/api-nest/usecases": ["libs/api-nest/usecases/src/index.ts"],
      "@dalenguyen/markdown": ["libs/markdown/src/index.ts"],
      "@dalenguyen/material": ["libs/material/src/index.ts"],
      "@dalenguyen/openai": ["libs/openai/src/index.ts"],
      "@dalenguyen/portfolio/home/feature": ["libs/portfolio/home/feature/src/index.ts"],
      "@dalenguyen/portfolio/home/ui": ["libs/portfolio/home/ui/src/index.ts"],
      "@dalenguyen/portfolio/resume/feature": ["libs/portfolio/resume/feature/src/index.ts"],
      "@dalenguyen/portfolio/shell/feature": ["libs/portfolio/shell/feature/src/index.ts"],
      "@dalenguyen/portfolio/shell/ui": ["libs/portfolio/shell/ui/src/index.ts"],
      "@dalenguyen/saas-libs": ["libs/saas-libs/src/index.ts"],
      "@dalenguyen/shared/mdx-elements": ["libs/shared/mdx-elements/src/index.ts"],
      "@dalenguyen/shared/ui": ["libs/shared/ui/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
