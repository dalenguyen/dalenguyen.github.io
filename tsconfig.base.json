{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@dalenguyen/material": ["libs/material/src/index.ts"],
      "@dalenguyen/openai": ["libs/openai/src/index.ts"],
      "@dalenguyen/portfolio/*": ["apps/porfolio/*"],
      "@dalenguyen/saas-libs": ["libs/saas-libs/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
